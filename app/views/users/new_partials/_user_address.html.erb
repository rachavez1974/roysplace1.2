
  <%= f.fields_for :addresses do |addrs| %>
  <%= f.error_notification %> 
  <div class="container">
    <div class="row">
      <div class="form-group col-md-4">
        <%= addrs.input :street_address %>
      </div>
      <div class="form-group col-md-2">
        <%= addrs.input :address_type, collection: [["Business", "business"], ["Military", "military"], ["Residence", "residence"], ["University", "university"]] %>
      </div>


      <div class="form-group col-md-2">
        <%= addrs.input :unit_type, as: :select, collection: [["None", "none"], ["Apt", "apt"], ["Floor", "floor"], ["Suite", "Suite"]], :input_html => {:onchange => "showAptNumberBox('user_addresses_attributes_0_unit_type');"} %>
        
      </div>
      <div class="form-group col-md-2">
        <%= addrs.input :number %>
        
      </div>
      <div class="clearfix"></div>

      <div class="form-group col-md-4">
        <%= addrs.input :city %>
      </div>
      <div class="form-group col-md-2">
        <%= addrs.input :state %>
      </div>
      <div class="form-group col-md-2">
        <%= addrs.input :zipcode %>
      </div>
    </div>
  </div>  
  <% end %>




