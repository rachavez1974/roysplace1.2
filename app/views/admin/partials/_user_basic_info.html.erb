<%= simple_form_for(@user, url: yield(:path)) do |f| %>
<%= f.error_notification %> 
<div class="rightsignup">  
  <div class="container">
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :first_name, placeholder: "Type name here" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :last_name, placeholder: "Type last name here" %>
      </div>
      <div class="clearfix"></div>
      <div class="form-group col-md-4">
        <%= f.input :phone_number, placeholder: "Type phone number here"%>
      </div>
      <%= render 'admin/partials/user_address', :f => f %>
      <div class="form-group col-md-12">
        <div class=" btn">
            <%= f.submit yield(:button_text), class: "btn btn-primary" %>
          </div>
        </div
<% end %>


